'''Archlinux Tree Sync'''

from abs.config import BaseConfigFile
import abs
import abs.error
import argparse
import logging

def parse_argv():
    '''Load program parser'''
    parser = argparse.ArgumentParser()
    parser.add_argument("--version", action="version",
                        version="ats version %s" % abs.version)
    parser.add_argument("-d", "--debug", action="store_true",
        help="debug mode")
    parser.add_argument("-c", "--config", default=None,
        help="config file")
    parser.add_argument("tree", metavar="[repository[/package]]", nargs="*",
        help="")
    return parser.parse_args()

def main():
    '''Program entry point'''
    # parser command line
    args = parse_argv()
    # set global debug mode
    if args.debug:
        logging.getLogger().setLevel(logging.DEBUG)
    # Load configuration
    try:
        repos = BaseConfigFile(args.config, "ats.conf").config
    except abs.error.MissingConfigFile:
        logging.error("Configuration file is missing. "
                      "Please create it before!")
        exit(abs.error.ERR_FATAL)
    print(repos)

if __name__ == '__main__':
    main()

